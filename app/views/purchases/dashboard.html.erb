<div class="page-header">
  <h1>
    Dashboard
    <p class="lead">Upcoming expirations</p>
  </h1>


<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Item</th>
        <th>Category</th>
        <!-- <th>Purchase Date</th> -->
        <!-- <th>Notes</th> -->
        <th>Status</th>
        <th>Recommendation</th>
        <th>Recipe</th>
        <th>Actions</th>
      </tr>

      <% @purchases.each do |purchase| %>
      <tr>
        <td>
          <img src="<%= purchase.category.photo_url + "  " %>" height="45">
          <a href="/purchases/<%= purchase.id %>">
          <%= purchase.purchase_name %>
        </td>
        <td>
          <% if purchase.category.present? %>
            <!-- <a href="/categories/<%= purchase.category.id %>"> -->
              <%= purchase.category.category.gsub('_', ' ').capitalize %>
            </a>
          <% end %>
        </td>
        <!-- <td><%= purchase.purchase_date %></td> -->
        <!-- <td><%= purchase.notes %></td> -->

        <!-- Logic for states -->
        <% if 5 <= Date.today - purchase.purchase_date %>
        <td><span class="label label-danger">Stage 4</span></td>
        <% elsif 3.33 <= Date.today - purchase.purchase_date && Date.today - purchase.purchase_date < 5 %>
        <td><span class="label label-warning">Stage 3</span></td>
        <% elsif 1.67 <= Date.today - purchase.purchase_date && Date.today - purchase.purchase_date < 3.33 %>
        <td><span class="label label-success">Stage 2</span></td>
        <% elsif 0 <= Date.today - purchase.purchase_date && Date.today - purchase.purchase_date < 1.67 %>
        <td><span class="label label-info">Stage 1</span></td>
        <% end %>

        <td>Recommendation to be added</td>

        <td>Recipe to be added</td>

        <td>
          <a href="/purchases/<%= purchase.id %>" class="btn btn-link">Show</a>

          <% if current_user == purchase.user %>
            <a href="/purchases/<%= purchase.id %>/edit" class="btn btn-link">Edit</a>
            <a href="/delete_purchase/<%= purchase.id %>" class="btn btn-link" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
