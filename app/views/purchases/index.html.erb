<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Purchase Name</th>
        <th>Category</th>
        <th>Purchase Date</th>
        <th>Notes</th>
        <!-- <th>User</th> -->
        <th>Actions</th>
      </tr>

      <% @purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.purchase_name %></td>
        <td>
          <% if purchase.category.present? %>
            <a href="/categories/<%= purchase.category.id %>">
              <%= purchase.category.category.gsub('_', ' ').capitalize %>
            </a>
          <% end %>
        </td>
        <td><%= purchase.purchase_date %></td>
        <td><%= purchase.notes %></td>
        <!-- <td>
          <% if purchase.user.present? %>
            <a href="/users/<%= purchase.user.id %>">
              <%= purchase.user.email %>
            </a>
          <% end %>
        </td> -->
        <td>
          <a href="/purchases/<%= purchase.id %>" class="btn btn-link">Show</a>

          <% if current_user == purchase.user %>
            <a href="/purchases/<%= purchase.id %>/edit" class="btn btn-link">Edit</a>
            <a href="/delete_purchase/<%= purchase.id %>" class="btn btn-link" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @purchases, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
