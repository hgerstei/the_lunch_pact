<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <!-- <th>Photo</th> -->
        <th>Category</th>
        <th>Sub-categories</th>
        <!-- <th>Lifespan (Days)</th> -->
        <th>Refrigerate?</th>
        <th>Storage Suggestions</th>
        <th></th>
      </tr>

      <% @categories.each do |category| %>
      <tr>
        <!-- <td><img src="<%= category.photo_url %>" height="45"></td> -->
        <td><img src="<%= category.photo_url %>" height="45"><%= "  " + category.category.gsub('_', ' ').camelize %></td>
        <td><%= category.sub_categories.to_s.gsub('\\', '') %></td>
        <!-- <td><%= category.lifespan %></td> -->
        <% if category.refrigeration == true %>
        <td>Yes</td>
        <% else %>
        <td>No</td>
        <% end %>
        <!-- <td><%= category.refrigeration %></td> -->
        <td><%= category.storage_suggestions.to_s.gsub('\\', '') %></td>
        <td>
          <!-- <a href="/purchases/new" class="btn btn-primary">Add Purchase</a> -->
          <a href="/categories/<%= category.id %>" class="btn btn-primary btn-sm">Add Purchase</a>
          <!-- <a href="/categories/<%= category.id %>/edit" class="btn btn-warning">Edit</a> -->
          <!-- <a href="/delete_category/<%= category.id %>" class="btn btn-danger" rel="nofollow">Delete</a> -->
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @categories, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
