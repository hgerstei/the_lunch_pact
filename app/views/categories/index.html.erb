<div class="page-header">
  <h1>
    Categories
    <a href="/categories/new" class="btn btn-lg btn-success">New Category</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Type</th>
        <th>Sub categories</th>
        <th>Photo url</th>
        <th>Lifespan</th>
        <th>Refrigeration</th>
        <th>Storage suggestions</th>
        <th>Actions</th>
      </tr>

      <% @categories.each do |category| %>
      <tr>
        <td><%= category.type %></td>
        <td><%= category.sub_categories %></td>
        <td><%= category.photo_url %></td>
        <td><%= category.lifespan %></td>
        <td><%= category.refrigeration %></td>
        <td><%= category.storage_suggestions %></td>
        <td>
          <a href="/categories/<%= category.id %>" class="btn btn-primary">Show</a>
          <a href="/categories/<%= category.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_category/<%= category.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
